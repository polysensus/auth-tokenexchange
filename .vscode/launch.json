{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Docker: Attach to Node",
            "localRoot": "${workspaceFolder}/tokenendpoint",
            "remoteRoot": "/tokenendpoint"
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program",
            "env": {
                "GCP_PROJECT": "iona-1",
                "SIGNING_SECRET_FILE": "${workspaceFolder}/credentials/debug.jwk",
                "CLIENTS_FILE": "${workspaceFolder}/credentials/clients.json",
                "REDIS_URL": "redis://store"
            },
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/tokenendpoint/index.js"
        }
    ]
}